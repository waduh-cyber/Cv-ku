const cards = document.querySelectorAll('.card');

window.addEventListener('scroll', () => {
  cards.forEach(card => {
    const rect = card.getBoundingClientRect();
    const visibleHeight = window.innerHeight * 0.6;

    // Saat card masuk area tengah bawah layar → muncul
    if (rect.top < visibleHeight && rect.bottom > 100) {
      card.classList.add('show');
      card.classList.remove('hide');
    } 
    // Saat card sudah melewati atas layar → menghilang perlahan
    else if (rect.bottom < 50 || rect.top > window.innerHeight) {
      card.classList.add('hide');
      card.classList.remove('show');
    }
  });
});
